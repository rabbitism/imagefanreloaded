<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:u="https://irihi.tech/ursa"
        x:Class="ImageFanReloaded.Controls.TabOptionsWindow"
        Icon="/MainWindowIcon.ico"
        Title="Tab options"
        Width="800"
        Height="600"
        WindowStartupLocation="CenterOwner"
        CanMinimize="False"
        CanResize="False"
        CanMaximize="False"
        Focusable="True"
        Closing="OnWindowClosing">
    <u:Form Margin="4" LabelPosition="Left" LabelAlignment="Right" LabelWidth="*">
        <ComboBox Name="_folderOrderingComboBox"
                  u:FormItem.Label="Folder ordering:"
                  HorizontalAlignment="Stretch"
                  VerticalContentAlignment="Center" />
        <ComboBox Name="_folderOrderingDirectionComboBox"
                  u:FormItem.Label="Folder ordering direction:"
                  HorizontalAlignment="Stretch"
                  VerticalContentAlignment="Center" />
        <ComboBox Name="_imageFileOrderingComboBox"
                  u:FormItem.Label="Image file ordering:"
                  HorizontalAlignment="Stretch"
                  VerticalContentAlignment="Center" />
        <ComboBox Name="_imageFileOrderingDirectionComboBox"
                  u:FormItem.Label="Image file ordering direction:"
                  HorizontalAlignment="Stretch"
                  VerticalContentAlignment="Center" />
        <ComboBox Name="_imageViewDisplayModeComboBox"
                  u:FormItem.Label="Image view display mode:"
                  HorizontalAlignment="Stretch"
                  VerticalContentAlignment="Center" />
        <ComboBox Name="_thumbnailSizeComboBox"
                  u:FormItem.Label="Thumbnail size:"
                  HorizontalAlignment="Stretch"
                  VerticalContentAlignment="Center" />
        <CheckBox Name="_recursiveFolderBrowsingCheckBox"
                  u:FormItem.Label="Recursive folder browsing?" />
        <CheckBox Name="_showImageViewImageInfoCheckBox"
                  u:FormItem.Label="Show image info in image view?" />
        <Slider Name="_panelsSplittingRatioSlider"
                u:FormItem.Label="Panels splitting ratio:"
                Minimum="0"
                Maximum="100" />
        <ComboBox Name="_slideshowIntervalComboBox"
                  u:FormItem.Label="Slideshow interval:"
                  HorizontalAlignment="Stretch"
                  VerticalContentAlignment="Center" />
        <CheckBox Name="_applyImageOrientationCheckBox"
                  u:FormItem.Label="Apply EXIF image orientation (slight performance impact)?" />
        <CheckBox Name="_showThumbnailImageFileNameCheckBox"
                  u:FormItem.Label="Show thumbnail image file name?" />
        <ComboBox Name="_keyboardScrollThumbnailIncrementComboBox"
                  u:FormItem.Label="Keyboard scroll thumbnail increment (using PageUp and PageDown):"
                  HorizontalAlignment="Stretch"
                  VerticalContentAlignment="Center" />
        <CheckBox Name="_saveAsDefaultCheckBox"
                  u:FormItem.Label="Save as default?" />
    </u:Form>
</Window>